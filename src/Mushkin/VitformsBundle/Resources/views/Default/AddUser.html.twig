{% extends "MushkinVitformsBundle:Default:index.html.twig" %}

{% block forms %}
    <p>Добавление нового работника:</p>
    <div class="col-md-12">
{#        <form role="form" method="post" action="{{ path('AddUser') }}"> #}
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.secondName) }}
        {{ form_row(form.age) }}

        <h3>Умения:</h3>
        <ul class="skills" data-prototype="{{ form_widget(form.skills.vars.prototype)|e }}" >
            {% for skillfield in form.skills %}
